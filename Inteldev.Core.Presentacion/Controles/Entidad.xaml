            </controles:ItemFormulario>
            <controles:ItemFormulario 
                Etiqueta="Nombre" 
                Valor="{Binding Path=Modelo.Nombre, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                <!--<controles:ItemFormulario.ColumnDefinitions>
                    <ColumnDefinition Width="149*"/>
                    <ColumnDefinition Width="244*"/>
                </controles:ItemFormulario.ColumnDefinitions> Comentado por Pocho-->
            </controles:ItemFormulario>
