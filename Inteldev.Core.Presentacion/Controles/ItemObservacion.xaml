<Grid x:Class="Inteldev.Core.Presentacion.Controles.ItemObservacion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controles="clr-namespace:Inteldev.Core.Presentacion.Controles"
             mc:Ignorable="d"
      Focusable="True">

    <StackPanel Margin="10">
        <controles:ItemFormularioTextMultilinea Etiqueta="Observación" Texto="{Binding Path=Objeto.Nombre, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </controles:ItemFormularioTextMultilinea>
    </StackPanel>
</Grid>